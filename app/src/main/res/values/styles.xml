<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
    </style>

    <!--自定义标题栏-->
    <declare-styleable name="BaseTitleBarView">
        <attr name="titleBar" format="string" />
        <attr name="textBar" format="string" />
        <attr name="textColorBar" format="color" />
        <attr name="buttonBar" format="reference" />
        <attr name="backBar" format="boolean" />
    </declare-styleable>
</resources>
